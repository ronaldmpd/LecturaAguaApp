<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MainActivity"
android:orientation="vertical">

<!--  Logo -->
<TextView android:id="@+id/titleSystem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dip"
    android:layout_marginBottom="25dip"
    android:text="Registrar Lecturas del Medidor de Agua Potable"
    android:gravity="center"
    android:textSize="25dip"
    android:textStyle="bold"
    android:textColor="#0b84aa"/>
<TextView android:id="@+id/titleSystem2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dip"
    android:layout_marginBottom="5dip"
    android:text="Comunidad Santa Ana"
    android:gravity="center"
    android:textSize="25dip"
    android:textStyle="bold"
    android:textColor="#FB6705"/>

<ImageView android:layout_height="80dp"
    android:src="@drawable/grifo"
    android:id="@+id/img"
    android:layout_width="wrap_content"
    android:layout_marginTop="15dip"
    android:layout_gravity="center">
    android:gravity="center_horizontal"
</ImageView>

<EditText android:id="@+id/txtUserName"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:hint="Usuario"
    android:inputType="text" />

<EditText android:id="@+id/txtPassword"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:hint="ContraseÃ±a"
    android:inputType="textPassword"
    android:layout_marginTop="15dip"
    android:layout_marginBottom="30dip" />


<Button android:id="@+id/btnEntrar"
    android:layout_height="wrap_content"
    android:layout_width="170dip"
    android:text="Entrar"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:drawableLeft="@drawable/icon_login"
    />



</LinearLayout>
